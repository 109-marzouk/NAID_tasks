<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/acc_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/eliza_john"
        android:src="@drawable/photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/post_text"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/acc_photo"
        android:text="@string/eliza_john"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/post_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:padding="15dp"
        android:text="@string/post_text"
        tools:ignore="RelativeOverlap" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:src="@drawable/ic_baseline_more_horiz_24"
        android:contentDescription="@string/eliza_john" />

    <ImageView
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignTop="@+id/post_text"
        android:layout_marginTop="71dp"
        android:contentDescription="@string/eliza_john"
        android:scaleType="centerCrop"
        android:src="@drawable/post_photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/post_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-30dp"
        android:layout_marginStart="15dp"
        android:gravity="left"
        android:text="@string/_100_comments"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/post_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-30dp"
        android:layout_marginEnd="15dp"
        android:gravity="right"
        android:text="@string/_2_8m_views"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>